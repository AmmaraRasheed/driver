<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".MainActivity">
    <include layout="@layout/app_bar_layout" android:id="@+id/mainPageBar"></include>
    <TextView
        android:layout_width="match_parent"
        android:text="Select One Option"
        android:gravity="center"
        android:layout_gravity="center"
        android:fontFamily="serif"
        android:textSize="35dp"
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="10dp"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="180dp"
        android:layout_marginTop="20dp"
        android:onClick="MoveChallan"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/pencil"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:id="@+id/Challan"
            android:layout_marginLeft="4dp"
            android:text="Challan"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_gravity="center"
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:onClick="notifications"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="25dp"
            android:background="@drawable/notification"
            android:layout_gravity="center"

            android:layout_marginLeft="25dp"
            android:layout_height="30dp" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Notification"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:onClick="userRecord"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/record1"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Record"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:onClick="View_Map"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/location"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="View Map"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />

    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:onClick="View_Events"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/location"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Events  "
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:onClick="Stop"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/location"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Stops  "
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="180dp"
        android:layout_marginTop="10dp"
        android:onClick="createBus"
        android:layout_gravity="center"
        android:orientation="horizontal"
        android:background="@drawable/button_front"
        android:layout_height="50dp">
        <ImageView
            android:layout_width="wrap_content"
            android:background="@drawable/location"
            android:layout_gravity="center"
            android:layout_marginLeft="25dp"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_width="wrap_content"
            android:layout_marginLeft="4dp"
            android:text="Create Bus"
            android:gravity="center"
            android:textColor="@color/colorPrimaryDark"
            android:layout_gravity="center"
            android:textSize="20dp"
            android:layout_height="30dp" />
    </LinearLayout>
</LinearLayout>