<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".Notifiation.Notification1">
    <include layout="@layout/app_bar_layout" android:id="@+id/mainPageBar"></include>
    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_weight="9"
        android:id="@+id/recyclenotification"
        android:layout_height="0dp">

    </android.support.v7.widget.RecyclerView>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_weight="1"
        android:weightSum="5"
        android:layout_height="0dp">
        <EditText
            android:layout_width="0dp"
            android:hint="Enter Message"
            android:layout_weight="4"
            android:id="@+id/noification"
            android:layout_height="match_parent" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="1"
            android:text="Send"
            android:onClick="saveNotifications"
            android:layout_height="match_parent" />
    </LinearLayout>

</LinearLayout>