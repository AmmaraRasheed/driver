<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:orientation="vertical"
    android:layout_height="match_parent"
    tools:context=".StudentRecord.StudentDetails">
    <include layout="@layout/app_bar_layout" android:id="@+id/mainPageBar"></include>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="3"
            android:layout_marginTop="10dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="2dp"
            android:orientation="vertical"
            android:layout_height="wrap_content">
            <TextView
                android:layout_width="wrap_content"
                android:layout_weight="2"
                android:textColor="@color/colorPrimary"
                android:text="Student Name:"
                android:layout_gravity="center"
                android:textSize="25dp"
                android:textStyle="bold"
                android:layout_height="wrap_content" />
            <TextView
                android:layout_width="180dp"
                android:id="@+id/name5"
                android:layout_gravity="center"
                android:textColor="@color/colorPrimary"
                android:gravity="center"
                android:textSize="20dp"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:src="@drawable/colg1"
            android:layout_gravity="right"
            android:layout_marginRight="10dp"
            android:layout_marginTop="5dp"
            android:layout_height="120dp" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="Father Name:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/fname5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="Roll Number:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/roll_no5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="CNIC:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/cnic5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="Class:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/class5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="Status:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/status5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="Email:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/email5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:weightSum="5"
        android:layout_marginLeft="10dp"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="2"
            android:textColor="@color/colorPrimary"
            android:text="Phone Number:"
            android:textSize="15dp"
            android:textStyle="bold"
            android:layout_height="wrap_content" />
        <TextView
            android:layout_weight="3"
            android:layout_width="0dp"
            android:id="@+id/phone5"
            android:textColor="@color/colorPrimary"
            android:layout_height="wrap_content" />
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_marginTop="40dp"
        android:orientation="horizontal"
        android:gravity="center"
        android:weightSum="5"
        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:textSize="15dp"
            android:background="@drawable/cardview_background_accept"
            android:textStyle="bold"
            android:onClick="AcceptUser"
            android:src="@drawable/tick"
            android:layout_height="60dp" />
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content" />
        <ImageView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:onClick="DenyStudent"
            android:textSize="15dp"
            android:background="@drawable/cardview_deny"
            android:textStyle="bold"
            android:src="@drawable/cross"
            android:layout_height="60dp" />
    </LinearLayout>
</LinearLayout>