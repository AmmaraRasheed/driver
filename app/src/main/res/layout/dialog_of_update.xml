<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="350dp"
    android:orientation="vertical"
    android:layout_marginTop="20dp"
    android:layout_height="wrap_content">
    <TextView
        android:textStyle="bold"
        android:textColor="@color/colorPrimaryDark"
        android:textSize="35dp"
        android:gravity="center"
        android:layout_marginLeft="10dp"
        android:typeface="serif"
        android:layout_marginRight="10dp"
        android:layout_marginBottom="10dp"
        android:layout_width="match_parent"
        android:text="Update Record"

        android:layout_height="wrap_content" />
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/name1"
        android:hint="update Name"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/fathername1"
        android:hint="update Father Name"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/email1"
        android:hint="update Email"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/phone1"
        android:hint="update Phone Number"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/rollnmber1"
        android:hint="update Roll number"
        android:layout_height="wrap_content"/>
    <EditText
        android:layout_width="match_parent"
        android:id="@+id/userclase1"
        android:hint="update Class"
        android:layout_height="wrap_content"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="20dp"
        android:weightSum="4"
        android:layout_height="wrap_content">
        <Button
            android:layout_width="0dp"
            android:text="Update"
            android:textColor="@color/colorPrimaryDark"
            android:layout_weight="2"
            android:textSize="20dp"
            android:layout_marginLeft="10dp"
            android:background="@drawable/button_background"
            android:id="@+id/update"
            android:layout_height="40dp" />
        <Button
            android:layout_width="0dp"
            android:layout_weight="2"
            android:text="cancel"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:background="@drawable/button_background"
            android:textSize="20dp"
            android:textColor="@color/colorPrimaryDark"
            android:id="@+id/cancel"
            android:layout_height="40dp" />
    </LinearLayout>


</LinearLayout>